<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/backgroundAppColor" />
            <corners android:radius="@dimen/authorizationEditTextRadius" />
            <stroke android:width="@dimen/authorizationEditTextStrokeWidth" android:color="@color/editTextIconInFocus" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/backgroundAppColor" />
            <corners android:radius="@dimen/authorizationEditTextRadius" />
            <stroke android:width="@dimen/authorizationEditTextStrokeWidth" android:color="@color/red" />
        </shape>
    </item>

</selector>